<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.WithoutActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textHeader" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/textHeader</item>
    </style>

    <style name="textHashTag" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textHashTag</item>
    </style>

    <style name="tabBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/deselected_tab_text</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
    </style>
</resources>
